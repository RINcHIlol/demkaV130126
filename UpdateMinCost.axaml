<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demkaV130126.UpdateMinCost"
        Title="UpdateMinCost">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="CostTextBox" Watermark="Новая стоимость" Margin="10"/>
        <Button Content="Изменить" Click="Button_OnClick" Margin="10"/>
        <TextBlock x:Name="ErrorTextBlock" IsVisible="False" Foreground="Red"/>
    </StackPanel>
</Window>
